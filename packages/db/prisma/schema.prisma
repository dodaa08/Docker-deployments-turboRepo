generator client {
  provider = "prisma-client-js"

}

datasource db {
  provider = "postgresql"
}

model User {
  id String @id @default(uuid())
  name String 
  email String @unique()
  password String
  todos   Todo[]  // One to Many relation
}

model Todo{
  id  String @id @default(uuid())
  title String
  done Boolean @default(false)
  userId String
  user  User  @relation(fields: [userId], references: [id])  // One to One relations 
}